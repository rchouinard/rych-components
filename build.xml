<?xml version="1.0" encoding="UTF-8"?>
<project name="rych-components" basedir="." default="dist">

    <target name="build-docs" description="Builds the API documentation with PHPDocumentor.">
        <delete dir="docs" />
        <mkdir dir="docs" />
        <phpdoc title="API Documentation"
            destdir="docs"
            sourcecode="yes"
            defaultpackagename="Rych"
            output="HTML:Smarty:PHP">
            <fileset dir=".">
                <include name="**/*.php" />
            </fileset>
        </phpdoc>
    </target>

</project>